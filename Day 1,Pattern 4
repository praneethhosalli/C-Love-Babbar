#include <iostream>
using namespace std;

int main() {
  for (int i=0;i<10;i++){
    for(int j=0;j<i+1;j++){
      cout<<"*";
    }
    cout<<endl;
  }
  return 0;
}




#include <iostream>
using namespace std;

int main() {
  int n=7;
  for (int i=0;i<n;i++){
    for(int j=0;j<n-i;j++){
      cout<<"*";
    }
    cout<<endl;
  }
  return 0;
}
